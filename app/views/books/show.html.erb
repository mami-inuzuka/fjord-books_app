<h1><%= t('views.common.title_show', name: Book.model_name.human) %></h1>

<p>
  <strong><%= Book.human_attribute_name(:title) %>:</strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:memo) %>:</strong>
  <%= @book.memo %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:author) %>:</strong>
  <%= @book.author %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:picture) %>:</strong>
  <%= image_tag(@book.picture_url) if @book.picture.present? %>
</p>

<h2>コメント</h2>
<div class="comment_area">
<% if @comments.empty? %>
  <p>コメントはまだありません</p>
<% else %>
  <% @comments.each do |comment| %>
    <div class="comment_description">
      <%= comment.comment %>
    </div>
    <span class="comment_created-at"><%= l comment.created_at, format: :long %></span>
    <span class="user_name">
      <%= comment.user.name_or_email %>
    </span>
    <% if current_user == comment.user %>
      <%= link_to t('views.common.destroy'), polymorphic_path([@book, comment]), method: :delete, data: { confirm: t('views.common.delete_confirm') }%>
      <%= link_to t('views.common.edit'), edit_polymorphic_path([@book, comment]) %>
    <% end %>
  <% end %>
<% end %>
</div>

<%= render 'comments/form', commentable: @book, comment: Comment.new %>

<%= link_to t('views.common.edit'), edit_book_path(@book) %> |
<%= link_to t('views.common.back'), books_path %>
