<p><%= @report.created_at.strftime('%Y年%m月%d日') %></p>
<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @report.description %>
</p>

<h2>コメント</h2>
<div class="comment_area">
<% if @comments.empty? %>
  <p>コメントはまだありません</p>
<% else %>
  <% @comments.each do |comment| %>
    <div class="comment_description">
      <%= comment.comment %>
    </div>
    <span class="comment_created-at"><%= l comment.created_at, format: :long %></span>
    <div class="user_name">
      <% if comment.user.name.nil? %>
        <%= comment.user.email %>
      <% else %>
        <%= comment.user.name %>
      <% end %>
    </div>
    <%= link_to '削除', report_comment_path(@report.id,comment), method: :delete, data: { confirm: t('views.common.delete_confirm') }%>
  <% end %>
<% end %>
</div>

<%= render 'comments/form', commentable: @report %>

<% if current_user == @report.user %>
  <%= link_to 'Edit', edit_report_path(@report) %> |
  <%= link_to 'Destroy', report_path(@report), method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', reports_path %>
